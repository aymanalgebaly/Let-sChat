<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageFriendConv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/default_avatar" />

    <TextView
        android:id="@+id/displayNameFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="2dp"
        android:layout_toEndOf="@+id/imageFriendConv"
        android:layout_toRightOf="@+id/imageFriendConv"
        android:text="DisplayName"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textFriendConv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageFriendConv"
        android:layout_marginLeft="2dp"
        android:layout_toEndOf="@+id/imageFriendConv"
        android:layout_toRightOf="@+id/imageFriendConv"
        android:background="@drawable/style_conv"
        android:padding="2dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/displayNameFriend"
        android:layout_toRightOf="@+id/displayNameFriend"
        android:text="00:00"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/message_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/textFriendConv"
        android:layout_below="@+id/textFriendConv"
        android:layout_marginLeft="0dp"
        android:layout_toEndOf="@+id/imageFriendConv"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/textFriendConv"
        android:layout_toRightOf="@+id/imageFriendConv" />

</RelativeLayout>